<div class="container-fluid" id="body">
    <div class="container" id="main-contain">
        <div class="row">
            <div class="col-6">
                <h3>
                    <p id="add-yours">Add Your own burger</p>
                </h3>
                <div class="row"><button id="submit"><a>Submit</a></button>
                    <input type="text" name="new-burger" id="new-burger">
                </div>

            </div>
            <div class="col-6">
                <div class="dropdown">
                    <h3>
                        <p id="add-yours">Try One of our tasty Burger:</p>
                    </h3>
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        See menu
                    </a>

                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <button class="dropdown-item" id="pigeon-burger" value="Pigeon Burger">Pigeon Burger</button>
                        <button class="dropdown-item" id="in-ou-out" value='In-N-Out Burger'>In-N-Out Burger</button>
                        <button class="dropdown-item" id="wiskey-king-burger" value="Whiskey King Burger">Whiskey King
                            Burger</button>
                        <button class="dropdown-item" id="the-company-burger" value="The Company Burger">The Company
                            Burger</button>
                        <button class="dropdown-item" id="chargrilled"
                            value="Chargrilled Burger with Roquefort Cheese">Chargrilled Burger with Roquefort
                            Cheese</button>
                        <button class="dropdown-item" id="dyer-deep-fried" value="Dyer's Deep-Fried Burger">Dyer's
                            Deep-Fried Burger</button>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row" id="burger-list">
            <div class="col-6">
                <h3>Dining Table:</h3>
                <div id="fresh-burger">
                    {{#each data}}
                    {{#unless this.devoured}}
                    <h3 class="justify-content-between">{{this.burger_name}}</h3>
                    <p class="justify-content-between">Still fresh, Waiting to be devoured! So yumi..</p>
                    <button class="justify-content-between button1" data-id={{this.id}}><a class="a-fav"
                            href="/api/devoured/{{this.id}}">Devoure Me</a></button>
                    <button class="justify-content-between button2" data-id={{this.id}}><a class="a-fav"
                            href="/api/favorite/{{this.id}}">Add
                            to Favorite</a></button>
                    {{/unless}}
                    {{/each}}
                </div>
            </div>

            <div class="col-6">
                <h3>History:</h3>
                <div id="finished-burger">
                    {{#each data}}
                    {{#if this.devoured}}
                    <h3>{{this.burger_name}}</h3>
                    <p>Devoured!</p>
                    <button class="button3" data-id={{this.id}}><a class="a-fav"
                            href="/api/delete/{{this.id}}">Delete</a></button>
                    <button class="button2" data-id={{this.id}}><a class="a-fav" href="/api/favorite/{{this.id}}">Add to
                            Favorite</a></button>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
        <hr>
        <div class="row" id="favorite-title">
            <h3>Favorite:</h3>
        </div>
        <div class="row" id="favorite">
            <div id="favorite-list">
                {{#each data}}
                <div class="col-12" id="favorite-item">
                    {{#if this.favorite}}
                    <h3>{{this.burger_name}}</h3>
                    {{#if this.devoured}}
                    <button class="button1" data-id={{this.id}}><a class="a-fav" href="/api/dining/{{this.id}}">Move
                            into dining table</a></button>
                    {{/if}}
                    <button class="button3" data-id={{this.id}}><a class="a-fav"
                            href="/api/delete/{{this.id}}">Delete</a></button>
                    {{/if}}
                    <br>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<div id="left"></div>
<div id="right"></div>

<div id="footer">
    <div id="footer-img"></div>
</div>